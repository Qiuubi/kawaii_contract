{{ form_start(form) }}
<section class="my-custom-class-for-errors">
	{{ form_errors(form) }}
</section>
<section class="kawaii-contract-form add-product">
	<section class="kawaii-contract-structure preambule add-product">
		<section class="kawaii-contract-structure-container add-product">
			<div class="kawaii-contract-structure-inputs add-product">
				{{ form_label(form.name, "Nom du produit") }}
				{{ form_widget(form.name) }}
				{{ form_label(form.collection, "Collection") }}
				{{ form_widget(form.collection) }}
				{{ form_label(form.capacity, 'Capacit√© (en ml)') }}
				{{ form_widget(form.capacity) }}
				{{ form_label(form.price, 'Prix') }}
				{{ form_widget(form.price) }}
