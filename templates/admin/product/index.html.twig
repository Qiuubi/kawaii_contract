{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Collection</th>
				<th>Capacity</th>
				<th>Price</th>
				<th>Img</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.collection }}</td>
					<td>{{ product.capacity }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.img }}</td>
					<td>
						<a href="{{ path('product_show', {'id': product.id}) }}">Info</a>
						<a href="{{ path('product_edit', {'id': product.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('product_add') }}">Create new</a>
{% endblock %}
