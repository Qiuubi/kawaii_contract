{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1>Product</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Collection</th>
				<td>{{ product.collection }}</td>
			</tr>
			<tr>
				<th>Capacity</th>
				<td>{{ product.capacity }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ product.price }}</td>
			</tr>
			<tr>
				<th>Img</th>
				<td>{{ product.img }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('product_list') }}">Retour</a>

	<a href="{{ path('product_edit', {'id': product.id}) }}">Modifier</a>

	{{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
