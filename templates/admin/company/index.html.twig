{% extends 'base.html.twig' %}

{% block title %}Company index
{% endblock %}

{% block body %}
	<h1>Company index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Activity</th>
				<th>NumberRegistration</th>
				<th>LegalRepresentative</th>
				<th>Address</th>
				<th>ZipCode</th>
				<th>City</th>
				<th>Country</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for company in companies %}
				<tr>
					<td>{{ company.id }}</td>
					<td>{{ company.name }}</td>
					<td>{{ company.activity }}</td>
					<td>{{ company.numberRegistration }}</td>
					<td>{{ company.legalRepresentative }}</td>
					<td>{{ company.address }}</td>
					<td>{{ company.zipCode }}</td>
					<td>{{ company.city }}</td>
					<td>{{ company.country }}</td>
					<td>
						<a href="{{ path('company_show', {'id': company.id}) }}">show</a>
						<a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('company_add') }}">Create new</a>
{% endblock %}
