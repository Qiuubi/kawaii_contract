		.name-companies.in-progress,
		.name-companies-quality.in-progress,
		.name-user.in-progress {
			color: #5750FF;
		}

		.kawaii-contract-main-title.soon-finish,
		.kawaii-contract-icon-down-arrow.soon-finish,
		.kawaii-contract-first-block-name.soon-finish,
		.name-contract.soon-finish,
		.name-companies.soon-finish,
		.name-companies-quality.soon-finish,
		.name-user.soon-finish {
			color: #FF9C38;
		}

		.kawaii-contract-main-title.all-contracts,
		.kawaii-contract-icon-down-arrow.all-contracts,
		.kawaii-contract-first-block-name.all-contracts,
		.name-contract.all-contracts,
		.name-companies.all-contracts,
		.name-companies-quality.all-contracts,
		.name-user.all-contracts {
			color: #8FC100;
		}

		.kawaii-contract-first-block,
		.kawaii-contract-details-block {
			transition-duration: 0.5s;
			width: 97%;
		}

		.kawaii-contract-first-block:hover,
		.kawaii-contract-details-block:hover {
			transform: translate(0, -4px);
		}

		.kawaii-contract-first-block,
		.kawaii-contract-details-block,
