			height: 400px;
		}

		.kawaii-contract-details-circle,
		.kawaii-contract-status-circle {
			justify-content: center;
			align-items: center;
		}

		.kawaii-contract-details-circle {
			width: 500px;
			height: 500px;
		}

		.kawaii-contract-details-circle.last-contracts {
			border: 10px solid #CBE5FF;
		}

		.kawaii-contract-details-circle.in-progress {
			border: 10px solid #CCCAFF;
		}

		.kawaii-contract-details-circle.soon-finish {
			border: 10px solid #FF9C38;
		}

		.kawaii-contract-white-background {
			width: 400px;
			height: 400px;
		}

		.kawaii-contract-status-circle {
			width: 450px;
			height: 450px;
		}

		.kawaii-contract-white-background,
		.kawaii-contract-amendement-block {
			flex-direction: column;
		}

